<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorStatusBarBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Button. -->
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <!--Input field-->
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/white</item>
        <item name="titleTextColor">#222529</item>
        <item name="android:gravity">center</item>
        <item name="subtitleTextColor">@color/buttonColor</item>
    </style>

    <style name="TextAdditionalHeader">
        <item name="android:textColor">#231D2A</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextContentHeaders">
        <item name="android:textColor">#17121A</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

<!--     Default app button style-->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_round_corner</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/button_text_default</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearanceError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorErrorAppearance</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppProgressBarCircularDark" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textSize">@dimen/text_menu_size</item>
        <item name="android:textColor">@color/color_tint</item>
    </style>

    <style name="RegularBaseText" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/base_text</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="BaseRegularDarkText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/base_text</item>
        <item name="android:textColor">@color/base_regular_dark_text</item>>
    </style>

    <style name="BaseRegularLightText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/base_text</item>
        <item name="android:textColor">@color/base_regular_light_text</item>>
    </style>

    <style name="SmallRegularDarkText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/small_regular_dark_text</item>>
    </style>

    <style name="SmallRegularLightText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/small_regular_light_text</item>>
    </style>

    <style name="SMediumRegularDarkText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/smedium_text</item>
        <item name="android:textColor">@color/smedium_regular_dark_text</item>
    </style>

    <style name="SMediumRegularLightText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/smedium_text</item>
        <item name="android:textColor">@color/smedium_regular_light_text</item>
    </style>

    <style name="MediumRegularDarkText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/medium_regular_dark_text</item>
    </style>

    <style name="MediumRegularLightText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/medium_regular_light_text</item>
    </style>

    <style name="LargeRegularText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/large_regular_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppProgressBarCircularLight" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

</resources>