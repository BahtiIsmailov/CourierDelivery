<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lvl_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <!-- Button. -->
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <!--Input field-->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

        <item name="android:navigationBarColor">@color/lvl_1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/roboto_regular_font</item>
        <item name="fontFamily">@font/roboto_regular_font</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextToolbar">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular_font</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_app_round_corner</item>
        <item name="android:fontFamily">@font/roboto_medium_font</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/app_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTransparentButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_app_transparent_round_corner</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTransparentSupportButtonStyle" parent="AppTransparentButtonStyle">
        <item name="android:background">@drawable/button_app_transparent_round_corner_support</item>
    </style>

    <style name="AppTransparentImageButtonStyle" parent="AppTransparentButtonStyle">
        <item name="android:background">@drawable/button_app_transparent_round_corner_image</item>
    </style>


    <style name="AppMapButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_map_round_corner</item>
    </style>

    <style name="AppProgressBarCircularDark" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppProgressBarCircularLight" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/lvl_1</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textSize">@dimen/text_menu_size</item>
        <item name="android:textColor">@color/colorDividerPale</item>
    </style>


