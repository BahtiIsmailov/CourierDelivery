<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorStatusBarBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Button. -->
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <!--Input field-->
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/white</item>
        <item name="titleTextColor">#222529</item>
        <item name="android:gravity">center</item>
        <item name="subtitleTextColor">@color/buttonColor</item>
    </style>

    <style name="TextToolbar">
        <item name="android:textColor">@color/toolbar_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAdditionalHeader">
        <item name="android:textColor">#231D2A</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextContentHeaders">
        <item name="android:textColor">#17121A</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <!--     Default app button style-->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_round_corner</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/button_text_default</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearanceError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorErrorAppearance</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppProgressBarCircularDark" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/color_progress</item>
    </style>

    <style name="AppProgressBarCircularLight" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textSize">@dimen/text_menu_size</item>
        <item name="android:textColor">@color/tint</item>
    </style>


    <style name="RegularBaseFont" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
    </style>

    <style name="MediumBaseFont" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/medium</item>
    </style>


    <style name="SmallBlackRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/black_text</item>>
    </style>

    <style name="SmallDarkRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/dark_text</item>>
    </style>

    <style name="SmallLightRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/light_text</item>>
    </style>

    <style name="SmallBrightRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/bright_text</item>
    </style>


    <style name="MediumBlackRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/black_text</item>>
    </style>

    <style name="MediumDarkRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/dark_text</item>>
    </style>

    <style name="MediumLightRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/light_text</item>>
    </style>

    <style name="MediumBrightSmallRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/bright_text</item>
    </style>


    <style name="LargeBlackRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="LargeDarkRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="LargeLightRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/light_text</item>
    </style>

    <style name="LargeBrightRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/bright_text</item>
    </style>


    <style name="VeryLargeBlackRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/very_large_text</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="VeryLargeDarkRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/very_large_text</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="VeryLargeLightRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/very_large_text</item>
        <item name="android:textColor">@color/light_text</item>
    </style>


    <style name="LargeBrightMediumText" parent="MediumBaseFont">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/bright_text</item>
    </style>

    <style name="ExtraLargeBlackRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/extra_large_text</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="ExtraLargeDarkRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/extra_large_text</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="ExtraLightRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/extra_large_text</item>
        <item name="android:textColor">@color/light_text</item>
    </style>


    <style name="InputPhoneOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/very_large_text</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="boxStrokeColor">@color/colorOnSecondary</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textSize">@dimen/very_large_text</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_corner_radius</item>
    </style>

    <style name="TextInputDisableLayoutStyle" parent="TextInputLayoutStyle">
        <item name="boxBackgroundColor">@color/disable_input_background</item>
    </style>

    <style name="LargeRegularText" parent="RegularBaseFont">
        <item name="android:textSize">@dimen/extra_large_text</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/light_text</item>
        <item name="android:textColorPrimary">@color/black_text</item>
        <item name="android:background">@color/background_content_light</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dialog_title_alarm</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dialog_title_info</item>
    </style>

    <style name="HandleInputBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/HandleInputBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="HandleInputBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">#00000000</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/reception_rounded_corner_empty</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <style name="CustomProgressAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

        <style name="AppCompatCaptureTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:windowDrawsSystemBarBackgrounds">true</item>
            <item name="android:statusBarColor">#ffb341</item>
            <item name="android:windowTranslucentStatus">true</item>
        </style>



</resources>