        <item name="android:textColor">@color/medium_regular_dark_text</item>
    </style>

    <style name="MediumRegularLightText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/medium_regular_light_text</item>
    </style>

    <style name="LargeRegularText" parent="RegularBaseText">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/large_regular_text</item>
    </style>

