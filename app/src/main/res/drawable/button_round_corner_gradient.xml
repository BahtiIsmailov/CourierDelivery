<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/button_disabled_gradient_start"
                android:endColor="@color/button_disabled_gradient_end"
                android:angle="315"/>
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item
        android:state_enabled="true"
        android:state_pressed="false">
        <shape  android:shape="rectangle">
            <gradient
                android:startColor="@color/button_normal_gradient_start"
                android:endColor="@color/button_normal_gradient_end"
                android:angle="315"/>
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/button_pressed_gradient_start"
                android:endColor="@color/button_pressed_gradient_end"
                android:angle="315"/>
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
</selector>