<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@+id/background">
        <shape android:shape="rectangle" android:innerRadiusRatio="100">

            <solid android:color="#4B8E8D8D"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#B47E7E"
                    android:centerColor="#FF0000"
                    android:centerY="1.0"
                    android:angle="270"
                    android:type="linear"
                    />

            </shape>
        </clip>
    </item>


    <item>
        <rotate
            android:pivotX="25%"
            android:fromDegrees="90"
            >
            <shape
                android:shape="line">
                <stroke
                    android:color="#ffffff"
                    android:width="1dp"

                    />
            </shape>

        </rotate>
    </item>

    <item>
        <rotate
            android:pivotX="50%"
            android:fromDegrees="90">
            <shape
                android:shape="line">
                <stroke
                    android:color="#ffffff"
                    android:width="1dp"
                    />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:pivotX="75%"
            android:fromDegrees="90">
            <shape
                android:shape="line">
                <stroke
                    android:color="#ffffff"
                    android:width="1dp"
                    />
            </shape>
        </rotate>
    </item>


</layer-list>