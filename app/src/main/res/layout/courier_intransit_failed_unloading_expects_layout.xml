<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lvl_1"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/selected_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/courier_intransit_background_select_red"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/box_address"
        style="@style/LargePrimaryRegularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/selected_background"
        app:layout_constraintTop_toTopOf="@+id/selected_background"
        tools:text="г. Подольск, ул. Троицкая, 20" />

    <TextView
        android:id="@+id/delivery_prefix"
        style="@style/LargeSecondaryRegularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:text="Доставлено"
        app:layout_constraintBottom_toBottomOf="@+id/selected_background"
        app:layout_constraintStart_toStartOf="@+id/selected_background"
        app:layout_constraintTop_toBottomOf="@+id/box_address" />

    <TextView
        android:id="@+id/delivery_count"
        style="@style/LargePrimaryRegularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/delivery_prefix"
        app:layout_constraintStart_toEndOf="@+id/delivery_prefix"
        app:layout_constraintTop_toTopOf="@+id/delivery_prefix"
        tools:text="20" />

    <TextView
        android:id="@+id/divider_count"
        style="@style/LargePrimaryRegularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="@+id/delivery_prefix"
        app:layout_constraintStart_toEndOf="@+id/delivery_count"
        app:layout_constraintTop_toTopOf="@+id/delivery_prefix" />

    <TextView
        android:id="@+id/from_count"
        style="@style/LargePrimaryRegularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/delivery_prefix"
        app:layout_constraintStart_toEndOf="@+id/divider_count"
        app:layout_constraintTop_toTopOf="@+id/delivery_prefix"
        tools:text="24" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_intransit_item_error"
        app:layout_constraintBottom_toBottomOf="@+id/from_count"
        app:layout_constraintEnd_toEndOf="@+id/selected_background"
        app:layout_constraintTop_toTopOf="@+id/from_count"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_item_border"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_courier_intransit_item_border_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>