<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_auth_content">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recipient_title"
                    style="@style/LargeBlackRegularText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                    android:layout_marginTop="16dp"
                    android:text="Данные получателя"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/surname_layout"
                    style="@style/TextInputDisableLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                    android:layout_marginTop="24dp"
                    android:enabled="false"
                    app:errorEnabled="false"
                    app:errorIconDrawable="@null"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_title"
                    tools:ignore="MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="абвгдеёжзийклмнопрстуфхцчшщьыъэюяАБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЬЫЪЭЮЯ"
                        android:hint="ФИО"
                        android:letterSpacing="0.04"
                        android:paddingTop="@dimen/auth_padding_top"
                        android:paddingBottom="@dimen/auth_padding_bottom" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inn_layout"
                    style="@style/TextInputDisableLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                    android:layout_marginTop="18dp"
                    android:enabled="false"
                    app:errorEnabled="false"
                    app:errorIconDrawable="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/middle_name_layout"
                    tools:ignore="MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ИНН"
                        android:inputType="number"
                        android:letterSpacing="0.04"
                        android:maxLength="@integer/inn"
                        android:paddingTop="@dimen/auth_padding_top"
                        android:paddingBottom="@dimen/auth_padding_bottom" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/account_title"
                    style="@style/LargeBlackRegularText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                    android:layout_marginTop="18dp"
                    android:text="Банковские реквизиты"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/account_layout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                    android:layout_marginTop="24dp"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@null"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_title"
                    tools:ignore="MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Расчётный счет"
                        android:inputType="number"
                        android:letterSpacing="0.04"
                        android:maxLength="@integer/account"
                        android:paddingTop="@dimen/auth_padding_top"
                        android:paddingBottom="@dimen/auth_padding_bottom" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bik_layout"
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                    android:layout_marginTop="18dp"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@null"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_title"
                    tools:ignore="MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/bik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="БИК"
                        android:inputType="number"
                        android:letterSpacing="0.04"
                        android:maxLength="@integer/bik"
                        android:paddingTop="@dimen/auth_padding_top"
                        android:paddingBottom="@dimen/auth_padding_bottom" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bank_layout"
                    style="@style/TextInputDisableLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                    android:layout_marginTop="18dp"
                    android:enabled="false"
                    app:errorEnabled="false"
                    app:errorIconDrawable="@null"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_title"
                    tools:ignore="MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="абвгдеёжзийклмнопрстуфхцчшщьыъэюяАБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЬЫЪЭЮЯ"
                        android:hint="Банк получателя"
                        android:paddingTop="@dimen/auth_padding_top"
                        android:paddingBottom="@dimen/auth_padding_bottom" />

                </com.google.android.material.textfield.TextInputLayout>

                <ru.wb.go.views.ProgressButtonView
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/auth_button_height"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="20dp"
                    app:progress_button_background="@drawable/progress_image_button_round_default"
                    app:progress_button_name="@string/courier_billing_account_save"
                    app:progress_button_state="enable"
                    app:progress_button_text_color_disable="@color/button_default_text_disable"
                    app:progress_button_text_color_enable="@color/button_default_text_enable"
                    app:progress_button_text_color_progress="@color/button_default_text_progress" />

                <LinearLayout
                    android:id="@+id/edit_account_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/remove_account"
                        android:layout_width="64dp"
                        android:layout_height="@dimen/auth_button_height"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/progress_image_button_round_refuse"
                        android:src="@drawable/ic_billing_account_remove"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ru.wb.go.views.ProgressButtonView
                        android:id="@+id/save_change_account"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/auth_button_height"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/refuse_order"
                        app:progress_button_background="@drawable/progress_image_button_round_default"
                        app:progress_button_name="Сохранить изменения"
                        app:progress_button_state="enable"
                        app:progress_button_text_color_disable="@color/button_default_text_disable"
                        app:progress_button_text_color_enable="@color/button_default_text_enable"
                        app:progress_button_text_color_progress="@color/button_default_text_progress" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/overlay_boxes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/remove"
                app:layout_constraintTop_toTopOf="@+id/empty_list" />

        </FrameLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>