<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_auth_content">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/edit_account_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipient_title"
                style="@style/LargeBlackRegularText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                android:layout_marginTop="16dp"
                android:text="@string/recipient_data_title"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_name_layout"
                style="@style/TextInputDisableLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                android:layout_marginTop="24dp"
                android:enabled="false"
                app:errorEnabled="false"
                app:errorIconDrawable="@null"
                app:layout_constraintTop_toBottomOf="@+id/phone_number_title"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="абвгдеёжзийклмнопрстуфхцчшщьыъэюяАБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЬЫЪЭЮЯ"
                    android:letterSpacing="0.04"
                    android:paddingTop="@dimen/auth_padding_top"
                    android:paddingBottom="@dimen/auth_padding_bottom"
                    tools:text="ФИО" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inn_layout"
                style="@style/TextInputDisableLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                android:layout_marginTop="18dp"
                android:enabled="false"
                app:errorEnabled="false"
                app:errorIconDrawable="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/middle_name_layout"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/auth_user_inn"
                    android:inputType="number"
                    android:letterSpacing="0.04"
                    android:maxLength="@integer/inn"
                    android:paddingTop="@dimen/auth_padding_top"
                    android:paddingBottom="@dimen/auth_padding_bottom" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/account_title"
                style="@style/LargeBlackRegularText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                android:layout_marginTop="18dp"
                android:text="@string/bank_details_title"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/account_layout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                android:layout_marginTop="24dp"
                app:errorEnabled="true"
                app:errorIconDrawable="@null"
                app:layout_constraintTop_toBottomOf="@+id/phone_number_title"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:hint="@string/payment_account_hint"
                    android:inputType="number"
                    android:letterSpacing="0.04"
                    android:maxLength="@integer/account"
                    android:paddingTop="@dimen/auth_padding_top"
                    android:paddingBottom="@dimen/auth_padding_bottom" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bik_layout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                android:layout_marginTop="18dp"
                app:errorEnabled="true"
                app:errorIconDrawable="@null"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bank_bik_hint"
                    android:inputType="number"
                    android:letterSpacing="0.04"
                    android:maxLength="@integer/bik"
                    android:paddingTop="@dimen/auth_padding_top"
                    android:paddingBottom="@dimen/auth_padding_bottom" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bank_layout"
                style="@style/TextInputDisableLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
                android:layout_marginTop="18dp"
                android:enabled="false"
                app:errorEnabled="false"
                app:errorIconDrawable="@null"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="абвгдеёжзийклмнопрстуфхцчшщьыъэюяАБВГДЕЁЖЗИЙКЛМНОПРСТУФХЦЧШЩЬЫЪЭЮЯ"
                    android:hint="@string/pay_bank_hint"
                    android:paddingTop="@dimen/auth_padding_top"
                    android:paddingBottom="@dimen/auth_padding_bottom" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/edit_account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/remove_account_button"
            android:layout_width="64dp"
            android:layout_height="@dimen/auth_button_height"
            android:layout_marginStart="@dimen/pad16"
            android:background="@drawable/progress_image_button_round_refuse"
            android:src="@drawable/ic_billing_account_remove"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription"
            tools:visibility="visible"/>

        <ru.wb.go.views.ProgressButtonView
            android:id="@+id/save_account_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_button_height"
            android:layout_marginStart="@dimen/pad16"
            android:layout_marginEnd="@dimen/pad16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/refuse_order"
            app:progress_button_background="@drawable/progress_image_button_round_default"
            app:progress_button_name="@string/save_title"
            app:progress_button_state="enable"
            app:progress_button_text_color_disable="@color/button_default_text_disable"
            app:progress_button_text_color_enable="@color/button_default_text_enable"
            app:progress_button_text_color_progress="@color/button_default_text_progress"
            tools:progress_button_name="Сохранить"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>