<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/remain_box_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/remain_box_code"
        style="@style/LargeSecondaryRegularText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad16"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="@dimen/pad16"
        tools:text="1. **** 123" />

    <TextView
        android:id="@+id/text_for_failed_boxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MediumLvl1SmallMediumText"
        android:visibility="gone"
        tools:visibility="visible"
        android:textColor="@color/red"
        android:layout_marginStart="@dimen/pad16"
        android:layout_marginEnd="@dimen/pad16"
        android:layout_marginTop="4dp"
        android:text="@string/some_text_for_failed_boxes"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F2F5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp" />

</LinearLayout>