<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:src="@drawable/ic_order_list_confirm"
        app:layout_constraintBottom_toTopOf="@+id/order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/order"
        style="@style/VeryLargeBlackRegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/coast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Заказ 3245934" />

    <TextView
        android:id="@+id/order_title_info"
        style="@style/LargeDarkRegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Внимательно проверьте данные "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order" />

    <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="16dp"
        android:background="#EDEEF0"
        app:layout_constraintBottom_toTopOf="@+id/arrive_prefix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/coast"
        style="@style/VeryLargeBlackRegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_order"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="3 200 ₽" />

    <View
        android:id="@+id/divider3"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="24dp"
        android:background="#EDEEF0"
        app:layout_constraintBottom_toTopOf="@+id/car_number_prefix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/car_number_prefix"
        style="@style/MediumDarkRegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Машина " />

    <TextView
        android:id="@+id/car_number"
        style="@style/MediumBlackRegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/car_number_prefix"
        app:layout_constraintStart_toEndOf="@+id/car_number_prefix"
        app:layout_constraintTop_toTopOf="@+id/car_number_prefix"
        tools:text="• А111АА197" />

    <ImageView
        android:id="@+id/car_change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/car_number"
        app:layout_constraintStart_toEndOf="@+id/car_number"
        app:layout_constraintTop_toTopOf="@+id/car_number"
        app:srcCompat="@drawable/ic_change_car"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/arrive_prefix"
        style="@style/MediumDarkRegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Прибыть "
        app:layout_constraintBottom_toTopOf="@+id/pvz"
        app:layout_constraintStart_toEndOf="@+id/show_route_image" />

    <TextView
        android:id="@+id/arrive"
        style="@style/MediumBlackRegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/arrive_prefix"
        app:layout_constraintStart_toEndOf="@+id/arrive_prefix"
        app:layout_constraintTop_toTopOf="@+id/arrive_prefix"
        tools:text="• за 20 мин" />

    <ImageView
        android:id="@+id/volume_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/arrive_prefix"
        app:layout_constraintEnd_toStartOf="@+id/icon_vertical"
        app:layout_constraintStart_toStartOf="@+id/icon_vertical"
        app:layout_constraintTop_toTopOf="@+id/arrive_prefix"
        app:srcCompat="@drawable/ic_clock"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/pvz"
        style="@style/MediumDarkRegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/volume"
        app:layout_constraintStart_toEndOf="@+id/show_route_image"
        tools:text="9 ПВЗ" />

    <ImageView
        android:id="@+id/pvz_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/pvz"
        app:layout_constraintEnd_toStartOf="@+id/icon_vertical"
        app:layout_constraintStart_toStartOf="@+id/icon_vertical"
        app:layout_constraintTop_toTopOf="@+id/pvz"
        app:srcCompat="@drawable/ic_pvz_count"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/volume"
        style="@style/MediumDarkRegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="20dp"
        android:text="от 200 шт. / 86 кубов"
        app:layout_constraintBottom_toTopOf="@+id/refuse_order"
        app:layout_constraintStart_toEndOf="@+id/show_route_image" />

    <ImageView
        android:id="@+id/show_route_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/volume"
        app:layout_constraintEnd_toStartOf="@+id/icon_vertical"
        app:layout_constraintStart_toStartOf="@+id/icon_vertical"
        app:layout_constraintTop_toTopOf="@+id/volume"
        app:srcCompat="@drawable/ic_box_and_volume"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/icon_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <ru.wb.perevozka.views.ProgressButtonView
        android:id="@+id/refuse_order"
        android:layout_width="0dp"
        android:layout_height="@dimen/auth_button_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:progress_button_background="@drawable/progress_image_button_round_default1"
        app:progress_button_name="Отмена"
        app:progress_button_state="enable"
        app:progress_button_text_color_disable="@color/button_default_text_disable"
        app:progress_button_text_color_enable="@color/button_default_text_enable1"
        app:progress_button_text_color_progress="@color/button_default_text_progress" />

    <ru.wb.perevozka.views.ProgressButtonView
        android:id="@+id/confirm_order"
        android:layout_width="0dp"
        android:layout_height="@dimen/auth_button_height"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:progress_button_background="@drawable/progress_image_button_round_default"
        app:progress_button_name="Подтвердить"
        app:progress_button_state="enable"
        app:progress_button_text_color_disable="@color/button_default_text_disable"
        app:progress_button_text_color_enable="@color/button_default_text_enable"
        app:progress_button_text_color_progress="@color/button_default_text_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>