<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/delivery_flight_background"
    tools:context=".ui.delivery.DeliveryFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:background="@color/delivery_flight_background"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/start_adding_boxes_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/delivery_layout_route" />

    <com.wb.logistics.views.ProgressImageButtonView
        android:id="@+id/start_adding_boxes_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:app_background="@drawable/progress_image_button_default"
        app:app_icon="@drawable/ic_start_scanner"
        app:app_state="enable"
        app:app_text="@string/delivery_start_receiving_boxes_start"
        app:app_text_color_disable="@color/button_default_text_disable"
        app:app_text_color_enable="@color/button_default_text_enable"
        app:app_text_color_progress="@color/button_default_text_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>