<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_padding_horizontal_base"
    android:layout_marginTop="25dp"
    android:layout_marginRight="@dimen/layout_padding_horizontal_base"
    android:layout_marginBottom="25dp"
    app:cardBackgroundColor="@color/delivery_card_background"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    app:cardElevation="@dimen/card_view_elevation"
    tools:context=".ui.flights.FlightsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/layout_padding_horizontal_base">

        <TextView
            android:id="@+id/flight_text"
            style="@style/LargeBlackRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="№ 31324" />

        <TextView
            android:id="@+id/date_text"
            style="@style/LargeLightRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/flight_text"
            app:layout_constraintEnd_toStartOf="@+id/dot_image"
            app:layout_constraintTop_toTopOf="@+id/flight_text"
            tools:text="23.09.2020" />

        <ImageView
            android:id="@+id/dot_image"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/date_text"
            app:layout_constraintEnd_toStartOf="@+id/time_text"
            app:layout_constraintTop_toTopOf="@+id/date_text"
            app:srcCompat="@drawable/ic_dot_divider" />

        <TextView
            android:id="@+id/time_text"
            style="@style/LargeLightRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/layout_padding_horizontal_base"
            app:layout_constraintBottom_toBottomOf="@+id/date_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/date_text"
            tools:text="10:00" />

        <TextView
            android:id="@+id/parking_title_text"
            style="@style/LargeLightRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.08"
            android:text="@string/flights_parking_title"
            android:textColor="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flight_text" />

        <TextView
            android:id="@+id/parking_number_text"
            style="@style/LargeLightRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:letterSpacing="0.08"
            android:textColor="@color/primary"
            app:layout_constraintBottom_toBottomOf="@+id/parking_title_text"
            app:layout_constraintStart_toEndOf="@+id/parking_title_text"
            app:layout_constraintTop_toTopOf="@+id/parking_title_text"
            tools:text="№10" />

        <TextView
            android:id="@+id/routes_title_text"
            style="@style/LargeBlackRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parking_title_text"
            app:layout_constraintVertical_bias="0"
            tools:text="Маршрут № 4 «Подольск север»" />

        <ImageView
            android:id="@+id/show_route_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="@dimen/layout_padding_horizontal_base"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/routes_title_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/routes_title_text"
            app:srcCompat="@drawable/ic_arrow_right_flight"
            tools:ignore="ContentDescription" />

        <ru.wb.go.views.WrapContentListView
            android:id="@+id/route_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/routes_title_text"
            tools:listitem="@layout/flights_route_item_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>