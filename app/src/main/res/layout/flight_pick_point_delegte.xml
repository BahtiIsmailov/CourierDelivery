<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="10dp"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    app:cardElevation="@dimen/card_view_elevation"
    tools:context=".ui.flights.FlightsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address"
            style="@style/LargeBlackRegularText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:lineSpacingExtra="4sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ПВЗ Москва, ул. 2-ая Владимирская, д.6, к1, 32/3" />

        <TextView
            android:id="@+id/deliver_count"
            style="@style/MediumLightRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_flight_delivery_redo_background"
            android:paddingLeft="@dimen/counter_margin_horizontal"
            android:paddingTop="@dimen/counter_margin_vertical"
            android:paddingRight="@dimen/counter_margin_horizontal"
            android:paddingBottom="@dimen/counter_margin_vertical"
            android:textColor="#642CA3"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address"
            tools:text="Доставить 4 шт." />

        <TextView
            android:id="@+id/pickup_count"
            style="@style/MediumLightRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_flight_delivery_undo_background"
            android:paddingLeft="@dimen/counter_margin_horizontal"
            android:paddingTop="@dimen/counter_margin_vertical"
            android:paddingRight="@dimen/counter_margin_horizontal"
            android:paddingBottom="@dimen/counter_margin_vertical"
            android:textColor="#D38119"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/deliver_count"
            app:layout_constraintTop_toBottomOf="@+id/address"
            tools:text="Забрать 4 шт." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>