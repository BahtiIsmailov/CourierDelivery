<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lvl_1"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/selected_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/courier_intransit_background_select_yellow"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/box_address"
        style="@style/MediumPrimaryRegularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/pad8"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/selected_background"
        app:layout_constraintEnd_toStartOf="@+id/delivery_count"
        app:layout_constraintStart_toStartOf="@+id/selected_background"
        app:layout_constraintTop_toTopOf="@+id/selected_background"
        tools:text="г. Подольск, ул. Троицкая, 20 г. Подольск, ул. Троицкая, 20 г. Подольск, ул. Троицкая, 20г. Подольск, ул. Троицкая, 20 г. Подольск, ул. Троицкая, 20" />

    <TextView
        android:id="@+id/delivery_count"
        style="@style/MediumPrimaryRegularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/from_count"
        app:layout_constraintEnd_toStartOf="@+id/divider_count"
        app:layout_constraintTop_toTopOf="@+id/from_count"
        tools:text="20" />

    <TextView
        android:id="@+id/divider_count"
        style="@style/MediumPrimaryRegularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/courier_intransit_delegate_divider"
        app:layout_constraintBottom_toBottomOf="@+id/from_count"
        app:layout_constraintEnd_toStartOf="@+id/from_count"
        app:layout_constraintTop_toTopOf="@+id/from_count" />

    <TextView
        android:id="@+id/from_count"
        style="@style/MediumPrimaryRegularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad8"
        android:layout_marginEnd="@dimen/pad16"
        android:layout_marginBottom="@dimen/pad8"
        app:layout_constraintBottom_toBottomOf="@+id/selected_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.0"
        tools:text="24" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad8"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_intransit_item_wait"
        app:layout_constraintEnd_toEndOf="@+id/selected_background"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_item_border"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_courier_intransit_item_border_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>