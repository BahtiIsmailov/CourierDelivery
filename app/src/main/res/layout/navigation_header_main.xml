<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/nav_header_name"
        style="@style/MediumRegularDarkText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        tools:text="ФИО" />

    <TextView
        android:id="@+id/nav_header_company"
        style="@style/SMediumRegularLightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        tools:text="Компания" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@color/tint" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inet_app_text"
            style="@style/MediumRegularLightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:paddingEnd="10dp"
            android:text="@string/inet_text" />

        <TextView
            android:id="@+id/inet_app_status_make_text"
            style="@style/MediumRegularLightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inet_ok"
            android:textColor="@color/complete"
            android:visibility="gone" />

        <TextView
            android:id="@+id/inet_app_status_no_text"
            style="@style/MediumRegularLightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inet_no"
            android:textColor="@color/danger"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tint" />

</LinearLayout>
