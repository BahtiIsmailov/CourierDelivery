<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/scanner"
        class="ru.wb.go.ui.scanner.CourierScannerFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
        tools:layout="@layout/courier_scanner_fragment" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/disable_scan_status"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:text="Начните сканирование"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_center_horizontal" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scanner_info_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status">

        <TextView
            android:id="@+id/prefix_qr_code"
            style="@style/VeryLargeDarkRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="QR"
            app:layout_constraintBottom_toBottomOf="@+id/qr_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/qr_code" />

        <TextView
            android:id="@+id/qr_code"
            style="@style/VeryLargeLightRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0000000000"
            app:layout_constraintBottom_toBottomOf="@+id/list_layout"
            app:layout_constraintStart_toEndOf="@+id/prefix_qr_code"
            app:layout_constraintTop_toTopOf="@+id/list_layout" />

        <View
            android:id="@+id/divider2"
            android:layout_width="1dip"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#EDEEF0"
            app:layout_constraintBottom_toBottomOf="@+id/list_layout"
            app:layout_constraintEnd_toStartOf="@+id/list_layout"
            app:layout_constraintTop_toTopOf="@+id/list_layout" />

        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_layout">

            <TextView
                android:id="@+id/address_title"
                style="@style/LargeLightRegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Адрес доставки" />

            <TextView
                android:id="@+id/address"
                style="@style/LargeBlackRegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:lineSpacingExtra="4sp"
                tools:text="-" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingEnd="50dp"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/receive_title"
                style="@style/LargeDarkRegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Принято" />

            <TextView
                android:id="@+id/receive"
                style="@style/LargeBlackRegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0 шт." />


        </LinearLayout>

        <ru.wb.go.views.ProgressButtonView
            android:id="@+id/complete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_button_height"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:progress_button_background="@drawable/progress_image_button_round_default"
            app:progress_button_name="@string/courier_order_scanner_complete"
            app:progress_button_state="disable"
            app:progress_button_text_color_disable="@color/button_default_text_disable"
            app:progress_button_text_color_enable="@color/button_default_text_enable"
            app:progress_button_text_color_progress="@color/button_default_text_progress" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status">

        <ru.wb.go.ui.courierordertimer.view.TimerProgressView
            android:id="@+id/timer"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:ap_is_divider="true"
            app:ap_progress="0"
            app:ap_progress_background_color="@color/color_arc_foreground"
            app:ap_progress_foreground_color="@color/color_arc_backgroundColor"
            app:ap_progress_scale_current_color="@color/color_arc_scale_current"
            app:ap_progress_scale_wait_color="@color/color_arc_scale_wait"
            app:ap_progress_width="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/arrive"
            style="@style/LargeDarkRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Резерв"
            app:layout_constraintBottom_toTopOf="@+id/time_digit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/time_digit"
            style="@style/LargeBlackRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="13:10" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/timer"
            app:layout_constraintEnd_toEndOf="@+id/timer"
            app:layout_constraintStart_toStartOf="@+id/timer"
            app:layout_constraintTop_toTopOf="@+id/timer" />

        <TextView
            android:id="@+id/gate"
            style="@style/LargeDarkRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Ворота"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/gate_digit"
            style="@style/LargeBlackRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gate"
            tools:text="303" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/auth_button_height_large" />

</androidx.constraintlayout.widget.ConstraintLayout>