<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lvl_1">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/auth_input_horizontal_patent_offset"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="@dimen/auth_input_horizontal_patent_offset"
        android:gravity="center"
        android:text="@string/courier_car_number_title"
        android:textAppearance="@style/LargePrimaryRegularText"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/car_number"
        style="@style/ExtraLightRegularText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/auth_input_horizontal_patent_offset"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/auth_input_horizontal_patent_offset"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:maxLength="12"
        
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/number_not_found"
        style="@style/LargePrimaryRegularText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/auth_number_phone_phone_not_found"
        android:textAppearance="@style/SmallPrimaryRegularText"
        android:textColor="@color/red"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/car_number"
        app:layout_constraintTop_toBottomOf="@+id/car_number" />

    <ru.wb.go.ui.couriercarnumber.keyboard.CarNumberKeyboardNumericView
        android:id="@+id/view_keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_number"
        custom:carNumberKeyboardColor="@color/primary"
        custom:carNumberType="numeric"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ru.wb.go.views.ProgressButtonView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/auth_button_height"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:progress_button_background="@drawable/progress_image_button_round_default_background"
        app:progress_button_name="Отмена"
        app:progress_button_state="enable"
        app:progress_button_text_color_disable="@color/tertiary"
        app:progress_button_text_color_enable="@color/colorPrimary"
        app:progress_button_text_color_progress="@color/colorPrimary" />

    <ru.wb.go.views.ProgressButtonView
        android:id="@+id/confirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/auth_button_height"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/center_vertical"
        app:progress_button_background="@drawable/progress_image_button_round_default"
        app:progress_button_name="Подтвердить"
        app:progress_button_state="disable"
        app:progress_button_text_color_disable="@color/tertiary"
        app:progress_button_text_color_enable="@color/lvl_1"
        app:progress_button_text_color_progress="@color/lvl_1" />

</androidx.constraintlayout.widget.ConstraintLayout>

