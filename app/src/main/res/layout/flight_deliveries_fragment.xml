<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/delivery_flight_background"
    tools:context=".ui.flights.FlightsFragment">

    <TextView
        android:id="@+id/status"
        style="@style/BaseRegularLightText"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:background="@color/background_content_light"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="@string/flight_deliveries_activated"
        android:paddingEnd="16dp"
        android:textColor="#642CA3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:background="@color/delivery_flight_background"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status"
        tools:listitem="@layout/flight_deliveries_layout_route" />

    <com.wb.logistics.views.ProgressImageButtonView
        android:id="@+id/complete"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:visibility="gone"
        app:app_background="@drawable/progress_image_button_danger"
        app:app_icon="@drawable/ic_force_delivery"
        app:app_state="enable"
        app:app_text="@string/force_termination_complete_delivery"
        app:app_text_color_disable="@color/button_gray_text_disable"
        app:app_text_color_enable="@color/button_gray_text_enable"
        app:app_text_color_progress="@color/button_gray_text_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>