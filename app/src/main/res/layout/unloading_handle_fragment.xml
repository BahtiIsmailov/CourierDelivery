    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_input_normal_transparent"
        app:errorEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintBottom_toTopOf="@+id/accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/code_box"
            style="@style/VeryLargeBlackRegularText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:hint="@string/dc_loading_code_pref_box"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="number"
            android:textCursorDrawable="@null" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.wb.logistics.views.ProgressImageButtonView
        android:id="@+id/accept"
        android:layout_width="0dp"
        android:layout_height="@dimen/auth_button_height"
        android:layout_margin="16dp"
        app:app_background="@drawable/progress_image_button_round_default"
        app:app_icon="@drawable/ic_reception_plus"
        app:app_state="enable"
        app:app_text="@string/dc_loading_handle_receive"
        app:app_text_color_disable="@color/button_default_text_disable"
        app:app_text_color_enable="@color/button_default_text_enable"
        app:app_text_color_progress="@color/button_default_text_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

