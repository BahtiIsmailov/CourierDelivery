<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_phone_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/auth_input_horizontal_patent_offset"
        android:layout_marginTop="@dimen/auth_input_top_offset"
        app:errorEnabled="true"
        app:layout_constraintTop_toTopOf="parent"
        android:textColorHint="@color/colorOnSecondary"
        app:boxStrokeColor="@color/colorOnSecondary"
        app:boxBackgroundColor="@color/white"
        app:endIconMode="clear_text"
        app:endIconDrawable="@drawable/ic_close_dialog"
        app:endIconTint="@color/btn_clear_phone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_number"
            style="@style/InputPhoneOutlineBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:importantForAutofill="noExcludeDescendants"
            android:inputType="phone"
            android:maxLength="@integer/max_phone_string"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textCursorDrawable="@null"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/number_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_number_phone_phone_not_found"
        android:textAppearance="@style/SmallRegularDarkText"
        android:textColor="@color/invalid"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/phone_layout"
        app:layout_constraintTop_toBottomOf="@+id/phone_layout" />



    <com.wb.logistics.views.ProgressImageButtonView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_button_height"
        app:app_background="@drawable/progress_image_button_default"
        app:app_icon="@drawable/ic_arrow_left"
        app:app_state="disabled"
        app:app_text="@string/auth_number_phone_phone_next"
        app:app_text_color_disable="@color/button_default_text_disable"
        app:app_text_color_enable="@color/button_default_text_enable"
        app:app_text_color_progress="@color/button_default_text_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>